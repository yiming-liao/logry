    "test:coverage": "jest --coverage && open coverage/lcov-report/index.html",
    "prepublishOnly": "yarn build"
  },
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.27.0",
    "@sentry/node": "^9.29.0",
